<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dish Category Form View -->
    <record id="view_dish_category_form" model="ir.ui.view">
        <field name="name">dish.category.form</field>
        <field name="model">dish.category</field>
        <field name="arch" type="xml">
            <form string="Dish Category">
                <sheet style="background-color: #e8f5e8; border: 2px solid #049f5f; border-radius: 8px;">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                        <button type="object" name="action_view_dishes" class="oe_stat_button" icon="fa-cutlery">
                            <field name="dish_count" widget="statinfo" string="Dishes"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group style="background-color: #e8f5e8; padding: 15px; border-radius: 8px; border: 2px solid #049f5f;">
                        <group>
                            <field name="price" string="Category Price (â‚¹)" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="sequence" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Category description..." style="border: 2px solid #049f5f; border-radius: 4px;"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dish Category List View -->
    <record id="view_dish_category_list" model="ir.ui.view">
        <field name="name">dish.category.list</field>
        <field name="model">dish.category</field>
        <field name="arch" type="xml">
            <list string="Dish Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="price" string="Price (Rs.)"/>
                <field name="dish_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Dish Category Action -->
    <record id="action_dish_category" model="ir.actions.act_window">
        <field name="name">Dish Categories</field>
        <field name="res_model">dish.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>