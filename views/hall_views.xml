<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_event_hall_form" model="ir.ui.view">
        <field name="name">event.hall.form</field>
        <field name="model">event.hall</field>
        <field name="arch" type="xml">
            <form>
                <sheet class="hall-form-sheet">
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group class="hall-form-group">
                        <group>
                            <field name="name" class="hall-form-field"/>
                            <field name="capacity" class="hall-form-field"/>
                        </group>
                        <group>
                            <field name="chairs" class="hall-form-field"/>
                            <field name="tables" class="hall-form-field"/>
                            <field name="facilities" class="hall-form-field"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_event_hall_kanban" model="ir.ui.view">
        <field name="name">event.hall.kanban</field>
        <field name="model">event.hall</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="capacity"/>
                <field name="chairs"/>
                <field name="tables"/>
                <field name="facilities"/>
                <field name="image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card hall-kanban-card">
                            <div class="hall-kanban-image">
                                <field name="image" widget="image" options="{'size': [295, 250]}"/>
                            </div>
                            <div class="oe_kanban_details o_kanban_record_headings hall-kanban-details">
                                <div class="hall-kanban-detail-item">
                                    <strong>Hall Name : <field name="name"/></strong>
                                </div>
                                <div class="hall-kanban-detail-item">
                                    <strong>Capacity : <field name="capacity"/></strong>
                                </div>
                                <div class="hall-kanban-detail-item">
                                    <strong>Number of Chairs : <field name="chairs"/></strong>
                                </div>
                                <div class="hall-kanban-detail-item">
                                    <strong>Number of Tables : <field name="tables"/></strong>
                                </div>
                                <div class="hall-kanban-detail-item">
                                    <strong>Facilities : <field name="facilities"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_event_hall_list" model="ir.ui.view">
        <field name="name">event.hall.list</field>
        <field name="model">event.hall</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="capacity"/>
                <field name="chairs"/>
                <field name="tables"/>
                <field name="facilities"/>
            </list>
        </field>
    </record>

    <record id="action_event_hall" model="ir.actions.act_window">
        <field name="name">Event Halls</field>
        <field name="res_model">event.hall</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>