<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_event_hall_form" model="ir.ui.view">
        <field name="name">event.hall.form</field>
        <field name="model">event.hall</field>
        <field name="arch" type="xml">
            <form>
                <sheet style="background-color: #e8f5e8; border: 2px solid #049f5f; border-radius: 8px;">
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group style="background-color: #e8f5e8; padding: 15px; border-radius: 8px; border: 2px solid #049f5f;">
                        <group>
                            <field name="name" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="capacity" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </group>
                        <group>
                            <field name="chairs" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="tables" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="facilities" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_event_hall_kanban" model="ir.ui.view">
        <field name="name">event.hall.kanban</field>
        <field name="model">event.hall</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="capacity"/>
                <field name="chairs"/>
                <field name="tables"/>
                <field name="facilities"/>
                <field name="image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card"
                             style="width: 300px; height: 420px; margin: 5px; cursor: pointer;
                                border: 3px solid #049f5f; background-color: #e8f5e8;
                                border-radius: 8px; display: flex; flex-direction: column;
                                justify-content: space-between; position: relative;">

                            <!-- Image section -->
                            <div style="flex: 0 0 250px; overflow: hidden; border-bottom: 2px solid #049f5f;">
                                <field name="image" widget="image" options="{'size': [295, 250]}"
                                       style="width: 100%; height: 100%; object-fit: cover;"/>
                            </div>

                            <!-- Details section -->
                            <div class="oe_kanban_details o_kanban_record_headings"
                                 style="padding: 15px; flex: 1; display: flex; flex-direction: column; justify-content: space-between;">
                                <div style="text-align: left; margin-top: auto;">
                                    <strong>Hall Name :
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div style="text-align: left; margin-top: auto;">
                                    <strong>Capacity :
                                        <field name="capacity"/>
                                    </strong>
                                </div>

                                <div style="text-align: left; margin-top: auto;">
                                    <strong>Number of Chairs :
                                        <field name="chairs"/>
                                    </strong>
                                </div>

                                <div style="text-align: left; margin-top: auto;">
                                    <strong>Number of Tables :
                                        <field name="tables"/>
                                    </strong>
                                </div>

                                <div style="text-align: left; margin-top: auto;">
                                    <strong>Facilities :
                                        <field name="facilities"/>
                                    </strong>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_event_hall_list" model="ir.ui.view">
        <field name="name">event.hall.list</field>
        <field name="model">event.hall</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="capacity"/>
                <field name="chairs"/>
                <field name="tables"/>
                <field name="facilities"/>
            </list>
        </field>
    </record>

    <record id="action_event_hall" model="ir.actions.act_window">
        <field name="name">Event Halls</field>
        <field name="res_model">event.hall</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>