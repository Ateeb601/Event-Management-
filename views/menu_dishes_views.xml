<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu Dishes List View -->
    <record id="view_menu_dishes_list" model="ir.ui.view">
        <field name="name">menu.dishes.list</field>
        <field name="model">menu.dishes</field>
        <field name="arch" type="xml">
            <list string="Menu Dishes">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="meal_type"/>
                <field name="meat_type"/>
                <field name="dish_category_id"/>
                <field name="price" readonly="1"/>
                <field name="is_vegetarian"/>
                <field name="is_spicy"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Menu Dishes Form View -->
    <record id="view_menu_dishes_form" model="ir.ui.view">
        <field name="name">menu.dishes.form</field>
        <field name="model">menu.dishes</field>
        <field name="arch" type="xml">
            <form string="Menu Dish">
                <sheet style="background-color: #e8f5e8; border: 2px solid #049f5f; border-radius: 8px;">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dish Name"/>
                        </h1>
                    </div>
                    <group style="background-color: #e8f5e8; padding: 15px; border-radius: 8px; border: 2px solid #049f5f;">
                        <group>
                            <field name="meal_type" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="meat_type" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="dish_category_id" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="price" readonly="1" string="Price (from Category)" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </group>
                        <group>
                            <field name="is_vegetarian" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="is_spicy" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="preparation_time" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="sequence" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" style="background-color: #e8f5e8; color: #049f5f; font-weight: bold;">
                            <field name="description" placeholder="Dish description..." style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Dishes Kanban View (Card Display) -->
    <record id="view_menu_dishes_kanban" model="ir.ui.view">
        <field name="name">menu.dishes.kanban</field>
        <field name="model">menu.dishes</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="price"/>
                <field name="meal_type"/>
                <field name="meat_type"/>
                <field name="dish_category_id"/>
                <field name="image"/>
                <field name="is_vegetarian"/>
                <field name="is_spicy"/>
                <field name="description"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click" style="width: 300px; margin: 10px; border: 3px solid #049f5f; background-color: #e8f5e8; border-radius: 8px;">
                            <div class="o_kanban_image">
                                <field name="image" widget="image" options="{'size': [200, 200]}" 
                                       style="width: 100%; height: 200px; object-fit: cover;"/>
                            </div>
                            <div class="oe_kanban_details" style="padding: 15px;">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <span class="badge badge-pill badge-info">
                                                <field name="meal_type"/>
                                            </span>
                                            <t t-if="record.meat_type.raw_value">
                                                <span class="badge badge-pill badge-secondary ml-1">
                                                    <field name="meat_type"/>
                                                </span>
                                            </t>
                                            <t t-if="record.dish_category_id.raw_value">
                                                <span class="badge badge-pill badge-primary ml-1">
                                                    <field name="dish_category_id"/>
                                                </span>
                                            </t>
                                            <t t-if="record.is_vegetarian.raw_value">
                                                <span class="badge badge-pill badge-success ml-1">üå± Veg</span>
                                            </t>
                                            <t t-if="record.is_spicy.raw_value">
                                                <span class="badge badge-pill badge-warning ml-1">üå∂Ô∏è Spicy</span>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="description" widget="text" limit="100"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <strong style="font-size: 18px; color: #875A7B;">
                                            Rs.<field name="price"/>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button type="object" name="action_add_to_booking" 
                                                class="btn btn-primary btn-sm">
                                            Add to Booking
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Menu Dishes Action -->
    <record id="action_menu_dishes" model="ir.actions.act_window">
        <field name="name">Menu Dishes</field>
        <field name="res_model">menu.dishes</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first menu dish!
            </p>
            <p>
                Add dishes for different meal types and connect them to bookings.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_dishes_main"
              name="Menu Dishes"
              parent="menu_event_management_root"
              action="action_menu_dishes"
              sequence="20"/>
</odoo>