<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_event_management_root" name="Event Management" sequence="10" web_icon="event_management,static/description/icon.png"/>
    
    <!-- Bookings Menu -->
<!--    <menuitem id="menu_event_bookings" name="Bookings" parent="menu_event_management_root"-->
<!--              action="action_event_booking_enhanced" sequence="10"/>-->

    <!-- Configuration Menu -->
    <menuitem id="menu_event_config" name="Configuration" parent="menu_event_management_root" sequence="40"/>
    
    <!-- Halls -->
    <record id="action_halls" model="ir.actions.act_window">
        <field name="name">Halls</field>
        <field name="res_model">event.hall</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
    
    <menuitem id="menu_halls" name="Halls" parent="menu_event_config" 
              action="action_halls" sequence="10"/>
    
    <!-- Event Types -->
    <menuitem id="menu_event_types" name="Event Types" parent="menu_event_config" 
              action="action_event_type" sequence="20"/>
    
    <!-- Event Categories -->
    <menuitem id="menu_event_categories" name="Event Categories" parent="menu_event_config" 
              action="action_event_category" sequence="30"/>
    
    <!-- Amenities -->
    <record id="action_amenities" model="ir.actions.act_window">
        <field name="name">Amenities</field>
        <field name="res_model">event.amenity</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
    
    <menuitem id="menu_amenities" name="Amenities" parent="menu_event_config" 
              action="action_amenities" sequence="40"/>


    <!-- Menu Dishes -->
    <record id="action_menu_dishes" model="ir.actions.act_window">
        <field name="name">Menu Dishes</field>
        <field name="res_model">menu.dishes</field>
        <field name="view_mode">kanban,form</field>
    </record>

</odoo>