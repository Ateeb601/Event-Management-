<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_event_amenity_form" model="ir.ui.view">
        <field name="name">event.amenity.form</field>
        <field name="model">event.amenity</field>
        <field name="arch" type="xml">
            <form>
                <sheet style="background-color: #e8f5e8; border: 2px solid #049f5f; border-radius: 8px;">
                    <field name="image" widget="image" class="oe_avatar"/>

                    <group style="background-color: #e8f5e8; padding: 15px; border-radius: 8px; border: 2px solid #049f5f;">
                        <field name="name" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        <field name="type" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        <field name="price" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        <field name="description" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_event_amenity_kanban" model="ir.ui.view">
        <field name="name">event.amenity.kanban</field>
        <field name="model">event.amenity</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="type"/>
                <field name="price"/>
                <field name="image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card"
                             style="width: 300px; margin: 5px; cursor: pointer; border: 3px solid #049f5f; background-color: #e8f5e8; position: relative; border-radius: 8px;">

                            <div class="o_kanban_image">
                                <field name="image" widget="image" options="{'size': [200, 200]}"
                                       style="width: 200%; height: 300px; object-fit: cover;"/>
                            </div>
                            <div class="oe_kanban_details o_kanban_record_headings" style="padding: 15px;">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="type"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <strong>Rs.
                                        <field name="price"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_event_amenity_list" model="ir.ui.view">
        <field name="name">event.amenity.list</field>
        <field name="model">event.amenity</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="price"/>
            </list>
        </field>
    </record>
</odoo>