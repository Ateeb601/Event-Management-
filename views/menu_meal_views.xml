<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu Meal Form View -->
    <record id="view_menu_meal_form" model="ir.ui.view">
        <field name="name">menu.meal.form</field>
        <field name="model">menu.meal</field>
        <field name="arch" type="xml">
            <form string="Menu Meal Package">
                <sheet style="background-color: #e8f5e8; border: 2px solid #049f5f; border-radius: 8px;">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Meal Package Name"/>
                        </h1>
                    </div>
                    <group style="background-color: #e8f5e8; padding: 15px; border-radius: 8px; border: 2px solid #049f5f;">
                        <group>
                            <field name="meat_type" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                            <field name="total_meal_price" string="Total Meal Price" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Menu Selection" style="background-color: #e8f5e8; color: #049f5f; font-weight: bold;">
                            <group style="background-color: #e8f5e8; padding: 15px; border-radius: 8px; border: 2px solid #049f5f;">
                                <group string="Main Course">
                                    <field name="meat_dishes" string="Meat Dishes" widget="many2many_tags" domain="[('meat_type', '=', meat_type)]" invisible="not meat_type" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                                    <field name="rice_dish_ids" string="Rice (Biryani/Pulao)" widget="many2many_tags" domain="[('dish_category', '=', 'rice')]" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                                </group>
                                <group string="Sides Extras">
                                    <field name="dessert_ids" string="Dessert (Kheer/Firni/Kulfa/Zarda)" widget="many2many_tags" domain="[('dish_category', '=', 'dessert')]" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                                    <field name="salad_ids" string="Salad (Fresh/Kachumar/Raita)" widget="many2many_tags" domain="[('dish_category', '=', 'salad')]" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                                    <field name="drink_ids" string="Drinks (Soft/Mineral Water)" widget="many2many_tags" domain="[('meal_type', '=', 'beverages')]" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                                    <field name="bread_ids" string="Bread (Live Roghani Naan)" widget="many2many_tags" domain="[('dish_category', '=', 'bread')]" style="border: 2px solid #049f5f; border-radius: 4px;"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" style="background-color: #e8f5e8; color: #049f5f; font-weight: bold;">
                            <field name="description" placeholder="Package description..." style="border: 2px solid #049f5f; border-radius: 4px;"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Meal List View -->
    <record id="view_menu_meal_list" model="ir.ui.view">
        <field name="name">menu.meal.list</field>
        <field name="model">menu.meal</field>
        <field name="arch" type="xml">
            <list string="Menu Meal Packages">
                <field name="name"/>
                <field name="rice_dish_ids"/>
                <field name="dessert_ids"/>
                <field name="salad_ids"/>
                <field name="drink_ids"/>
                <field name="bread_ids"/>
                <field name="total_meal_price" string="Total Meal Price"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Menu Meal Kanban View (Matches Booking Form Design) -->
    <record id="view_menu_meal_kanban" model="ir.ui.view">
        <field name="name">menu.meal.kanban</field>
        <field name="model">menu.meal</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="meat_type"/>
                <field name="total_meal_price"/>
                <field name="meat_dishes"/>
                <field name="rice_dish_ids"/>
                <field name="dessert_ids"/>
                <field name="salad_ids"/>
                <field name="drink_ids"/>
                <field name="bread_ids"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card"
                             style="width: 300px; margin: 5px; cursor: pointer; border: 3px solid #049f5f; background-color: #e8f5e8; position: relative; border-radius: 8px;">
                            <div style="padding: 15px;">
                                <strong style="font-size: 14px; color: #875A7B;">
                                    <field name="name"/>
                                </strong>
                                <br/>
                                <span class="badge badge-secondary">
                                    <field name="meat_type"/>
                                </span>
                                <span style="float: right; color: #875A7B; font-weight: bold;">
                                    <field name="total_meal_price"/>
                                </span>
                                <br/>
                                <div style="margin-top: 10px; font-size: 12px;">
                                    <t t-if="record.meat_dishes.raw_value">
                                        <div>üçñ
                                            <field name="meat_dishes"/>
                                        </div>
                                    </t>
                                    <t t-if="record.rice_dish_ids.raw_value">
                                        <div>üçö
                                            <field name="rice_dish_ids"/>
                                        </div>
                                    </t>
                                    <t t-if="record.dessert_ids.raw_value">
                                        <div>üç∞
                                            <field name="dessert_ids"/>
                                        </div>
                                    </t>
                                    <t t-if="record.salad_ids.raw_value">
                                        <div>ü•ó
                                            <field name="salad_ids"/>
                                        </div>
                                    </t>
                                    <t t-if="record.drink_ids.raw_value">
                                        <div>ü•§
                                            <field name="drink_ids"/>
                                        </div>
                                    </t>
                                    <t t-if="record.bread_ids.raw_value">
                                        <div>üçû
                                            <field name="bread_ids"/>
                                        </div>
                                    </t>
                                </div>
                                <div style="margin-top: 10px;">
                                    <button name="action_edit_meal" type="object"
                                            class="btn btn-sm btn-primary"
                                            style="width: 100%;">
                                        Edit Package
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Menu Meal Action -->
    <record id="action_menu_meal" model="ir.actions.act_window">
        <field name="name">Menu Meal Packages</field>
        <field name="res_model">menu.meal</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first meal package!
            </p>
            <p>
                Create complete meal packages for different event categories.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_meal_main"
              name="Meal Packages"
              parent="menu_event_management_root"
              action="action_menu_meal"
              sequence="25"/>
</odoo>